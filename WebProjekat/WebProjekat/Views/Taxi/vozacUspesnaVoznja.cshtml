@model WebProjekat.Models.Voznja
@{
    ViewBag.Title = "vozacUspesnaVoznja";
}

<html>
<head>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
    <body style="background-color:skyblue">
        <div style="text-align:center">
            <h2>Popunite sledeće podatke</h2>
            <form action="/Taxi/UspesnaVoznjaVozac">
                <table border="1">
                    <tr>
                        <td>Odredište(ulica,broj,grad,poštanski broj)</td>
                        <td><input type="text" name="ulica"  data-val="true" data-val-length="Ovo polje morate popuniti sa najmanje 4 karaktera" data-val-length-max="25" data-val-length-min="4" data-val-required="Ovo polje je neophodno popuniti"/></td>
                        <td><input type="number" name="broj"  data-val="true" data-val-length="Ovo polje morate popuniti sa najmanje 1 karaktera" data-val-length-max="25" data-val-length-min="1" data-val-required="Ovo polje je neophodno popuniti"/></td>
                        <td><input type="text" name="grad"  data-val="true" data-val-length="Ovo polje morate popuniti sa najmanje 4 karaktera" data-val-length-max="25" data-val-length-min="4" data-val-required="Ovo polje je neophodno popuniti"/></td>
                        <td><input type="number" name="posta"  data-val="true" data-val-length="Ovo polje morate popuniti sa najmanje 5 karaktera" data-val-length-max="25" data-val-length-min="5" data-val-required="Ovo polje je neophodno popuniti"/></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><span class="text-danger field-validation-error" data-valmsg-for="ulica" data-valmsg-replace="true"></span></td>
                        <td><span class="text-danger field-validation-error" data-valmsg-for="broj" data-valmsg-replace="true"></span></td>
                        <td><span class="text-danger field-validation-error" data-valmsg-for="grad" data-valmsg-replace="true"></span></td>
                        <td><span class="text-danger field-validation-error" data-valmsg-for="posta" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td>Iznos</td>
                        <td><input type="text" name="iznos"/></td>
                        
                    </tr>
                </table>
                <input type="hidden" value="@Model.DatumIVremePorudzbine" name="datum"/>
                <input type="hidden" value="@Model.Musterija.KorisnickoIme" name="musterija"/>
                <input type="hidden" value="@Model.Vozac.KorisnickoIme" name="vozac"/>
                <input type="hidden" value="@Model.Dispecer.KorisnickoIme" name="di"/>
                <input type="submit" value="Završi vožnju"/>
            </form>
        </div>
    </body>
</html>